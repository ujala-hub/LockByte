<script>
/* ======================================
   PASSWORD STRENGTH CHECKER LOGIC
======================================*/

const passwordInput = document.getElementById("password");
const progressBar = document.getElementById("progressBar");
const strengthText = document.getElementById("strengthText");

// Check password strength on typing
passwordInput.addEventListener("input", checkStrength);

function checkStrength() {
    const password = passwordInput.value;
    let strength = 0;

    // Length check
    if (password.length >= 8) strength++;

    // Lowercase
    if (/[a-z]/.test(password)) strength++;

    // Uppercase
    if (/[A-Z]/.test(password)) strength++;

    // Numbers
    if (/[0-9]/.test(password)) strength++;

    // Special characters
    if (/[^A-Za-z0-9]/.test(password)) strength++;

    // Update UI
    if (strength <= 2) {
        progressBar.style.width = "33%";
        progressBar.style.background = "red";
        strengthText.innerText = "Strength: Weak";
        strengthText.style.color = "red";
    }
    else if (strength <= 4) {
        progressBar.style.width = "66%";
        progressBar.style.background = "orange";
        strengthText.innerText = "Strength: Medium";
        strengthText.style.color = "orange";
    }
    else {
        progressBar.style.width = "100%";
        progressBar.style.background = "lime";
        strengthText.innerText = "Strength: Strong";
        strengthText.style.color = "lime";
    }
}

// Show / Hide Password
function togglePassword() {
    if (passwordInput.type === "password") {
        passwordInput.type = "text";
    } else {
        passwordInput.type = "password";
    }
}

// Generate Strong Password
function generatePassword() {
    const chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*()";
    let generatedPassword = "";
    for (let i = 0; i < 12; i++) {
        generatedPassword += chars.charAt(Math.floor(Math.random() * chars.length));
    }
    passwordInput.value = generatedPassword;
    checkStrength();
}

// Copy to Clipboard
function copyPassword() {
    navigator.clipboard.writeText(passwordInput.value);
    alert("Password Copied!");
}
</script>

